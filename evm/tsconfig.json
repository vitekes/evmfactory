{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "types": [
    "node",
    "mocha",
    "hardhat"
  ],
  "include": [
    "./scripts",
    "./test",
    "./typechain-types",
    "./hardhat.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
