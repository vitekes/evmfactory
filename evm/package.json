{
  "name": "hardhat-project",
  "scripts": {
    "clean": "npx hardhat clean",
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "coverage": "npx hardhat coverage",
    "node": "npx hardhat node",
    "deploy:local": "npx hardhat run scripts/deploy.ts --network localhost",
    "deploy:sepolia": "npx hardhat run scripts/deploy.ts --network sepolia",
    "deploy:mainnet": "npx hardhat run scripts/deploy.ts --network mainnet",
    "deploy:demo": "npx hardhat run scripts/deploy.ts --network hardhat",
    "deploy:demo:prod": "npx hardhat run scripts/deploy.ts --network mainnet",
    "demo:payment": "npx hardhat run demo/scenarios/run-payment-scenario.ts --network hardhat",
    "demo:subscription": "npx hardhat run demo/scenarios/run-subscription-scenario.ts --network hardhat",
    "demo:contest": "npx hardhat run demo/scenarios/run-contest-scenario.ts --network hardhat",
    "billing:worker": "npx hardhat run scripts/run-billing-worker.ts",
    "verify:sepolia": "npx hardhat ignition verify evmfactory-sepolia",
    "verify:mainnet": "npx hardhat ignition verify evmfactory-mainnet",
    "lint": "prettier --check \"contracts/**/*.sol\"",
    "lint:fix": "prettier --write \"contracts/**/*.sol\"",
    "prepare": "cd .. && husky install evm/.husky",
    "gasreport": "REPORT_GAS=true npx hardhat test",
    "demo:marketplace": "npx hardhat run demo/scenarios/run-marketplace-scenario.ts --network hardhat",
    "deploy": "npx hardhat run scripts/deploy.ts",
    "deploy:hardhat": "npx hardhat run scripts/deploy.ts --network hardhat"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.9",
    "@nomicfoundation/hardhat-ignition": "^0.15.0",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.0.0",
    "chai": "^4.3.0",
    "ethers": "^6.14.4",
    "glob": "^11.0.3",
    "hardhat": "^2.25.0",
    "hardhat-gas-reporter": "^1.0.9",
    "husky": "^8.0.0",
    "mocha": "^11.7.4",
    "prettier": "^3.5.3",
    "prettier-plugin-solidity": "^1.1.1",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.0",
    "typechain": "^8.3.2",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@chainlink/contracts": "^1.4.0",
    "@openzeppelin/contracts": "5.4.0",
    "@openzeppelin/contracts-upgradeable": "5.4.0",
    "dotenv": "^16.5.0",
    "solc": "0.8.30"
  },
  "engines": {
    "node": ">=20"
  },
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": [
      "ES2022"
    ],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "./contracts",
    "./test",
    "./ignition",
    "./scripts"
  ],
  "files": [
    "./hardhat.config.ts"
  ]
}
